{
  "compilerOptions": {
     /* Visit https://aka.ms/tsconfig to read more about this file */
    "target": "ES6",                         
    "module": "CommonJS",                    
    "rootDir": "./src",                      
    "outDir": "./dist",                      
    "strict": true,                          
    "esModuleInterop": true,                 
    "resolveJsonModule": true,               
    "skipLibCheck": true                     
  },
  "include": ["src/**/*"],                   
  "exclude": ["node_modules", "dist"]
}